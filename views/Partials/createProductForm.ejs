        <input class="createFormularyInput" name="photo" id="photo" placeholder="Foto" type="file"
            value="<%= /* (locals.old && old.photo) && old.photo */ %>">
        <small class="create__errors" id="errorPhoto">
            <%= /* locals.errors && errors.photo ? errors.photo.msg : null */ %>
        </small>

                

            <input class="createFormularyInput" name="name" id="name" placeholder="Nombre" type="text"
