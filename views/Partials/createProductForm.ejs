<div class="DashboardMenu">

    <form class="createFormularyForm" action="/createProduct" name="createProduct" method="POST">
        <p class="createFormularyTitle">
            Crear producto
        </p>
        <select id="producto" name="category">
            <option value="Stickers">Stickers</option>
            <option value="Buzos">Buzos</option>
            <option value="Gorros">Gorros</option>
            <option value="Posters">Posters</option>
        </select>
        <small class="create__errors" id="errorCategory">
            <%= /* locals.errors && errors.category ? errors.category.msg : null */ %>
