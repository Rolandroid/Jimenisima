<header class="jimenisimaHeader">
    <% if (locals.userLogin) { %>
        <div class="userIngressDiv">
            <div class="GoogleAuthImgContainer">
                <div class="GoogleAuthContent">
                </div>
                <img src="<%="/images/assets/" + locals.userLogin.UsuarioAccedido.avatar || "default-user.png"%>" alt="ingreso con google" class="userDefaultImg">
            </div>
                <div class="userIngressOptionsDiv">
                
                    <span class="loginText"><%= locals.userLogin.UsuarioAccedido.alias %></span>
                
                
                    <span class="registerText"><%= locals.userLogin.UsuarioAccedido.email %>
                    </span>
                
                <div class="headerLoginMenu">
                    <% if (locals.userLogin.UsuarioAccedido.rol === "admin") { %>
                        <a href="">
                            <i class="headerLoginMenuIcon fa-solid fa-chart-line"></i>
                    </a>
                        <% } %>
                    <a href="">
                        <i class="headerLoginMenuIcon fa-solid fa-cart-shopping"></i>
                    </a>
                    <a href="">
                        <i class="headerLoginMenuIcon fa-solid fa-gear"></i>
                    </a>
                    <a href="/users/logout">
                        <i class="headerLoginMenuIcon fa-solid fa-right-from-bracket"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <% }else{ %>
            <div class="userIngressDiv">
                <div class="GoogleAuthImgContainer">
                    <div class="GoogleAuthContent">
                        <a class="GoogleAuthRoute" href="" class="GoogleAuthContentPath">
                            Ingresar con Google
                        </a>
                    </div>
                    <img src="/images/assets/userDefault.png" alt="ingreso con google" class="userDefaultImg">
                </div>
                    <div class="userIngressOptionsDiv">
                    <a class="loginPath" href="/users/login">
                        <span class="loginText">Iniciar Sesion</span>
                    </a>
                    <a class="registerPath" href="/users/register">
                        <span class="registerText">Crear cuenta
                        </span>
                    </a>
                </div>
            </div>
        <% } %>
    
    
        <a class="HomePath" href="/">
            <img src="/images/assets/jimenisimaLogo.png" alt="Jimenisima" class="logoImg">
        </a>
   
</header>