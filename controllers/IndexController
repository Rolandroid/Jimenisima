const {getAllProducts, getIndexView} = require("../services")

module.exports = {
  index: async (req, res) => {
    try {
      const products = getAllProducts();
      const indexView = await getIndexView();

      return res.render('index', { indexView: indexView });
    } catch (error) {
      // Manejar errores si ocurren al obtener la vista del Ã­ndice
      console.error("Error al obtener la vista del Ã­ndice:", error);
      res.status(500).send("Error interno del servidor");
    }
  },
  dashboard : (req, res) => {
    console.log("indexController check")   
    return res.render('dashboard', {})
  },
  auth : (req, res) => {
    return res.render('auth', {})
  }
}